{
  "compileOnSave": true,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "lib": ["es6"],
    "module": "amd",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "target": "ES5",
    "paths": {
      "@enums": ["src/enums"],
      "@models": ["src/models"],
      "@types": ["src/types"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/**/*.spec.ts"]
}
