{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2020",
    "resolveJsonModule": true,
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "dist",
    "removeComments": true,
    "strict": false,
    "moduleResolution": "node",
    "baseUrl": "./",
    "pretty": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "src/**/*.spec.ts", "./jest.config.ts"]
}
