{
  "name": "reflextion-server",
  "version": "0.0.1",
  "description": "Server-side for reflextion app",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "tsc -w & nodemon dist",
    "lint": "eslint src & prettier src --write",
    "test": "jest"
  },
  "author": "Dan Stetsenko",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test --forceExit"
    }
  },
  "lint-staged": {
    "src/**/*{.ts,.js}": [
      "npm run lint",
      "git add .*"
    ]
  },
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "eslint": "^7.27.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.3",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.7",
    "pre-commit": "^1.2.2",
    "prettier": "^2.3.0",
    "ts-jest": "^26.5.6",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.4"
  }
}
